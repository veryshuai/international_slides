\begin{frame}
    
    \begin{itemize}
        \item Gravity equation (gravity):
        \begin{equation*}
            F_{12} = g \frac{M_1 M_2}{d^2}
        \end{equation*}
        \item Gravity equation (trade):
        \begin{equation*}
            T_{12} = g \frac{\mbox{GDP}_1 \mbox{GDP}_2}{d^\theta}
        \end{equation*}

\end{frame}

